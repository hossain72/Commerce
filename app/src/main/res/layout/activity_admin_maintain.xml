<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginRight="15dp"
    android:elevation="15dp"
    app:cardCornerRadius="10dp"
    tools:context=".admin.AdminMaintainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/maintainImageTV"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/productNameTV"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop" />

        <EditText
            android:id="@+id/maintainNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintainImageTV"
            android:layout_margin="6dp"
            android:background="@drawable/edit_text"
            android:gravity="center_horizontal"
            android:hint="Product Name"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/maintainDescriptionET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintainNameET"
            android:layout_margin="6dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/edit_text"
            android:gravity="center_horizontal"
            android:hint="Product Description"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/maintainPriceET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintainDescriptionET"
            android:layout_margin="6dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/edit_text"
            android:gravity="center_horizontal"
            android:hint="Product Price"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp" />

        <Button
            android:id="@+id/changeApplyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintainPriceET"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_buttons"
            android:padding="12dp"
            android:text="Apply Change"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/adminDeleteProductBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/changeApplyBtn"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/login_buttons"
            android:padding="12dp"
            android:text="Delete This Product"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>